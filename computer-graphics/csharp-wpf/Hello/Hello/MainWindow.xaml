<Canvas
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    ClipToBounds="True">

    <Ellipse
        Canvas.Left="-10" Canvas.Top="-10"
        Width="20" Height="20"
        Fill="lightgray"/>

    <Canvas.RenderTransform>
        <TransformGroup>
            <ScaleTransform
                ScaleX="4.8" ScaleY="4.8"
                CenterX="0" CenterY="0"/>
        </TransformGroup>
    </Canvas.RenderTransform>
</Canvas>
